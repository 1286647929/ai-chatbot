# 生成随机密钥: https://generate-secret.vercel.app/32 或 `openssl rand -base64 32`
AUTH_SECRET=****

# NewAPI 配置
# NewAPI 基础 URL（必须以 /v1 结尾）
NEWAPI_BASE_URL=https://your-newapi-domain.com/v1
# NewAPI API 密钥
NEWAPI_API_KEY=sk-****

# Vercel Blob 存储配置，创建说明: https://vercel.com/docs/vercel-blob
BLOB_READ_WRITE_TOKEN=****

# PostgreSQL 数据库配置，创建说明: https://vercel.com/docs/postgres
# Supabase 示例: postgres://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
POSTGRES_URL=****

# Redis 缓存配置（可选）
# 创建说明: https://vercel.com/docs/redis
# 本地示例: redis://localhost:6379/0
REDIS_URL=****

# 法律文档对话 API 配置（可选）
# 法律文档生成后端服务 URL
LEGAL_API_BASE_URL=https://your-legal-api-domain.com
# 法律后端服务 API 密钥（可选）
LEGAL_API_KEY=****

# 多智能体法律问答系统配置
# 设置为 "false" 禁用多智能体模式，使用单智能体
ENABLE_MULTI_AGENT=true
# Agent 执行超时时间（毫秒），默认 60000 = 60 秒
AGENT_DEFAULT_TIMEOUT=60000

# 网络搜索 API（选择其一，按以下优先级使用）
# Perplexity API - 推荐，支持搜索带引用
PERPLEXITY_API_KEY=****

# Bing Search API - 国内可用，稳定可靠
# 获取: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=****
# 可选：自定义端点（默认为国际版）
# BING_SEARCH_ENDPOINT=https://api.bing.microsoft.com/v7.0/search

# 智谱 AI (GLM-4) - 国产大模型，内置 web_search 工具
# 获取: https://open.bigmodel.cn/
ZHIPU_API_KEY=****

# Google Custom Search API - 需要科学上网
# 获取 API Key: https://developers.google.com/custom-search/v1/introduction
# 获取 CX: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=****
GOOGLE_SEARCH_CX=****

# Exa Search API - 高质量网页内容检索
EXA_API_KEY=****
# Tavily API - 备选搜索服务
TAVILY_API_KEY=****
# SerpAPI - Google 搜索结果
SERPAPI_API_KEY=****

# 法律数据库 API（可选）
# 外部法律法规数据库
LEGAL_DB_API_URL=https://your-legal-db-api.com
LEGAL_DB_API_KEY=****
# 外部案例数据库
CASE_DB_API_URL=https://your-case-db-api.com
CASE_DB_API_KEY=****

# 文本提取 API 配置（可选）
# 文本提取后端服务 URL（OCR/文档解析）
TEXTRACT_API_BASE_URL=https://your-textract-api-domain.com
# 文本提取后端服务 API 密钥（可选）
TEXTRACT_API_KEY=****

# MCP 服务器配置（可选）
# 启用 MCP 工具集成，设置为 "true" 启用
ENABLE_MCP_TOOLS=false
# 可通过以下模式配置多个 MCP 服务器:
# MCP_SERVER_<名称>_URL, MCP_SERVER_<名称>_TRANSPORT 等
#
# 法律知识 MCP 服务器示例:
# MCP_SERVER_LEGAL_URL=http://localhost:3001/mcp
# MCP_SERVER_LEGAL_TRANSPORT=http
# MCP_SERVER_LEGAL_TOKEN=****
#
# stdio 传输方式（仅限本地开发）:
# MCP_SERVER_LOCAL_TRANSPORT=stdio
# MCP_SERVER_LOCAL_COMMAND=npx
# MCP_SERVER_LOCAL_ARGS=-y,legal-mcp-server@latest
